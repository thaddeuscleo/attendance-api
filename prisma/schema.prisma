// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Children {
  id         String    @id @default(uuid())
  name       String
  surname    String
  parentName String
  bornDate   DateTime
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  events     Event[]

  @@index([categoryId])
}

model Category {
  id        String     @id @default(uuid())
  name      String
  childrens Children[]
}

model Event {
  id        String     @id @default(uuid())
  name      String
  childrens Children[]
}

model Admin {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}
